{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "react": ["./node_modules/preact/compat"],
      "react-dom": ["./node_modules/preact/compat"],
      "@app/*": ["src/app/*"]
    },
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "types": ["node", "webpack-env", "@types/telegram-web-app"]
  },
  "include": ["src/**/*"]
}
